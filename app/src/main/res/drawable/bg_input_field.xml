<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background Color -->
    <solid android:color="#FFFFFF" />

    <!-- Corner Radius to give it rounded edges -->
    <corners android:radius="12dp" />

    <!-- Optional padding inside the input field -->
    <padding
        android:left="10dp"
        android:right="10dp"
        android:top="10dp"
        android:bottom="10dp" />

    <!-- Border/Stroke -->
    <stroke
        android:width="1dp"
        android:color="#C1C1C1" />
</shape>
